<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ic_launcher_background"
        tools:context="com.example.gustavogobetti.movieapp200.MainActivity">

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="60dp"/>

        <Spinner
            android:id="@+id/spinnerOn"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/movies"></Spinner>
        <TextView
            android:textColor="#101"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text = "Choose Movie"/>


        <ScrollView
            android:id="@+id/detailScroll"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <ImageView
                    android:id="@+id/moviesImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrCompat= "drawable/catch_me_if_you_can"/>

                <TextView
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#FFF"
                    android:id="@+id/textMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="16dp"
                    android:lineHeight="24dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:padding="32dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>